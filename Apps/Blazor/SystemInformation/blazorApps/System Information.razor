<Tabs Style="margin:25px">
    <TabPane Tab="Drives">
        <Table Title="Drives" DataSource="$Drives">
            <PropertyColumn Property="Name" Title="Name" />
            <PropertyColumn Property="Free" Title="Free (GBs)" />
            <PropertyColumn Property="Used" Title="Used (GBs)" />
        </Table>
    </TabPane>
    <TabPane Tab="Processes">
        <Table Title="Processes" DataSource="$Processes">
            <PropertyColumn Property="Id" Title="ID" />
            <PropertyColumn Property="Name" Title="Name" Sortable="true" />
            <PropertyColumn Property="NPM" Title="NPM (K)" Sortable="true" />
            <PropertyColumn Property="PM" Title="PM (K)" Sortable="true" />
            <PropertyColumn Property="VM" Title="VM (K)" Sortable="true" />
        </Table>
    </TabPane>
</Tabs>